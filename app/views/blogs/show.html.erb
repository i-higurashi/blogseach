


<div class="container">


 <table class="table table-striped">

 	<thead>
 		<tr>
 			<th>title</th>
 			<th>opinion</th>
 			<th>image</th>
 		</tr>
 	</thead>
 	<tbody>
 		
 		<tr>
 			<td>
 				<%= @blog.title %>
 			</td>
 			<td>
 				<%= @blog.opinion %>
 			</td>
 			<td>
 				<%= attachment_image_tag @blog, :image, :fill, 100, 100, format: 'jpeg' %>
 		    </td>
 		    <td>
 		    	<%= link_to 'edit', edit_blog_path, class: "btn btn-primary" %>
 		    </td>
 		    <td>

 			    <%= link_to 'back', :back, class: "btn btn-info" %>

 		    </td>
 	    </tr>
 	</tbody>
 </table>